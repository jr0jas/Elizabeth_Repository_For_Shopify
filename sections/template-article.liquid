{% for block in  section.blocks %}  
    {% case block.type %}
        {% when "article_title" %}
            <h1>{{ article.title }}</h1>
        {% when "article_author" %}
            {% if section.settings.enabled_author %}
                <small>{{ article.author }}</small>   
            {% endif %}
        {% when "article_published_date" %}  
            {% if section.settings.enabled_published_date %}
                <time datetime="{{ article.published_at | date: '%y-%m-%d' }}"></time> 
            {% endif %}
        {% when "article_feature_image" %}
            <img src="{{ article.image |  img_url: 'large'}}" alt="{{ article.image.alt }}" loading="lazy"/>
        {% when "article_content" %}         
            <div class="">{{ article.content }}</div>  
        {% else %}
    {% endcase %}
{% endfor %}

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enabled_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
        "type": "article_title",
        "name": "Title",
        "limit": 1
    },
    {
        "type": "article_author",
        "name": "Author",
        "limit": 1
    },
    {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
    },
    {
        "type": "feature_image",
        "name": "Thumbnail",
        "limit": 1
    },
    {
        "type": "article_content",
        "name": "Content",
        "limit": 1
    }
  ]
}
{% endschema %}