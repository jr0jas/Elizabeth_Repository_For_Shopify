{%  for block in  section.blocks %}  
    {% case block.type %}
        {% when "article.title" %}
        {% when "article.author" %}
        {% when "article.published_date" %}  
        {% when "article.thumbnail" %}
        {% when "article.content" %}    
        {% else %}
            
    {% endcase %}
{% endfor %}
<h1>{{ article.title }}</h1>

{% if section.settings.enabled_author %}
    <small>{{ article.author }}</small>   
{% endif %}


{% if section.settings.enabled_published_date %}
    <time datetime="{{ article.published_at | date: '%y-%m-%d' }}"></time> 
{% endif %}

<img src="{{ article.image |  img_url: 'large'}}" alt="{{ article.image.alt }}" loading="lazy"/>

<div class="">{{ article.content }}</div>

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enabled_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
        "type": "article_title",
        "name": "Title",
        "limit": 1
    },
    {
        "type": "article_author",
        "name": "Author",
        "limit": 1
    },
    {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
    },
    {
        "type": "feature_image",
        "name": "Thumbnail",
        "limit": 1
    },
    {
        "type": "article_content",
        "name": "Content",
        "limit": 1
    }
  ]
}
{% endschema %}